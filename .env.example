# pi-linear-service Configuration
# Copy this file to .env and fill in your values

# Required: Linear API token (generate at https://linear.app/settings/api)
LINEAR_API_KEY=your_linear_api_key_here

# Required: Your Linear user ID (find in profile settings)
ASSIGNEE_ID=your_user_id_here

# Optional: Polling interval in seconds (default: 300 = 5 minutes)
POLL_INTERVAL_SEC=300

# Optional: Prefix for tmux sessions created by this service (default: pi_project_)
TMUX_PREFIX=pi_project_

# Optional: Comma-separated list of Linear state names to consider "open" (default: Todo,In Progress)
LINEAR_OPEN_STATES=Todo,In Progress

# Optional: Maximum number of issues to fetch per poll (default: 100)
LINEAR_PAGE_LIMIT=100

# Optional: Health check mode (default: basic)
# Options: none (disabled), basic (checks for dead panes)
SESSION_HEALTH_MODE=basic

# Optional: Kill unhealthy sessions (default: false for safety)
# If true, sessions owned by this service will be killed if unhealthy
SESSION_KILL_ON_UNHEALTHY=false

# Optional: Cooldown period in seconds before killing the same session again (default: 60)
SESSION_RESTART_COOLDOWN_SEC=60

# Optional: Log level (default: info)
# Options: debug, info, warn, error
LOG_LEVEL=info
